{
    "openapi": "3.0.2",
    "info": {
        "contact": {
            "email": "not@vailable"
        },
        "description": "This API describes some operations for monitoring the status of the digital forge.",
        "license": {
            "name": "MIT",
            "url": "https://github.com/jdeyton/forge-keeper/blob/master/LICENSE"
        },
        "title": "Forge Keeper",
        "version": "1.0.0"
    },
    "components": {
        "parameters": {},
        "responses": {
            "AccessDenied": {
                "description": "Insufficient privileges. Access denied."
            },
            "InvalidRequest": {
                "description": "Request not understood."
            },
            "UnexpectedError": {
                "description": "Unexpected error encountered.",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "integer",
                                    "format": "int32"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "schemas": {
            "EnvironmentalIndex": {
                "type": "string",
                "enum": [
                    "relative humidity",
                    "temperature"
                ]
            },
            "FloatSeries": {
                "type": "object",
                "properties": {
                    "events": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "time": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "value": {
                                    "type": "number",
                                    "format": "float"
                                }
                            }
                        }
                    },
                    "index": {
                        "type": "string"
                    }
                },
                "discriminator": {
                    "propertyName": "index",
                    "mapping": {
                        "humidity": "HumiditySeries",
                        "temperature": "TemperatureSeries"
                    }
                }
            },
            "HumiditySeries": {
                "allOf": [
                    { 
                        "$ref": "#/components/schemas/FloatSeries"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "units": {
                                "type": "string",
                                "enum": ["%RH"]
                            }
                        }
                    }
                ]
            },
            "TemperatureSeries": {
                "allOf": [
                    { 
                        "$ref": "#/components/schemas/FloatSeries"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "units": {
                                "type": "string",
                                "enum": ["C"]
                            }
                        }
                    }
                ]
            },
            "Package": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "The construct that is the source of the data."
                    },
                    "content": {
                        "type": "array",
                        "description": "The collected data content. Includes one or more indexes.",
                        "items": {
                            "anyOf": [
                                { "$ref": "#/components/schemas/HumiditySeries" },
                                { "$ref": "#/components/schemas/TemperatureSeries" }
                            ]
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "forge-auth": {
                "type": "oauth2",
                "flows": {
                    "authorizationCode": {
                        "authorizationUrl": "https://mendicant-bias.arcturus.forge.digital/auth",
                        "tokenUrl": "https://mendicant-bias.arcturus.forge.digital/auth.access",
                        "scopes": {
                            "write:drone": "drones do the work"
                        }
                    },
                    "password": {
                        "tokenUrl": "https://guilty-spark.arcturus.forge.digital/auth",
                        "scopes": {
                            "read:monitor": "monitors keep watch"
                        }
                    }
                }
            }
        }
    },
    "paths": {
        "/env/query": {
            "get": {
                "summary": "Query an environmental index.",
                "description": "Authorized entities may query samples from one or more environmental data indexes.",
                "tags": [
                    "environment"
                ],
                "parameters": [
                    {
                        "name": "from",
                        "description": "The start of the range for queried data. Default: 30 days prior",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "to",
                        "description": "The end of the range for queried data. Default: now",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "rate",
                        "description": "The frequency of queried data, in minutes.",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "enum": [1, 5, 15, 30, 60],
                            "default": 15
                        }
                    },
                    {
                        "name": "indexes",
                        "description": "The selection of data indexes to query.",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["humidity", "temperature"]
                            },
                            "default": ["humidity", "temperature"],
                            "minItems": 1,
                            "maxItems": 2
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Environmental query successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "anyOf": [
                                            { "$ref": "#/components/schemas/HumiditySeries" },
                                            { "$ref": "#/components/schemas/TemperatureSeries" }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/InvalidRequest"
                    },
                    "403": {
                        "$ref": "#/components/responses/AccessDenied"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        },
        "/env/report": {
            "post": {
                "summary": "Report data to an environmental index.",
                "description": "Registered constructs may report data samples to one or more environmental data indexes.",
                "tags": [
                    "environment"
                ],
                "requestBody": {
                    "description": "Data package to be added to the index.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Package"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Index update successful."
                    },
                    "400": {
                        "$ref": "#/components/responses/InvalidRequest"
                    },
                    "403": {
                        "$ref": "#/components/responses/AccessDenied"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        }
    },
    "servers": [
        { "url": "https://guilty-spark.arcturus.forge.digital" }
    ],
    "tags": [
        {
          "name": "environment"
        }
    ]
}